%header.navigation{role:'banner'}
  .navigation-wrapper
    %a.logo{href:'javascript:void(0)'}
      %img{src:"https://raw.githubusercontent.com/thoughtbot/refills/master/source/images/placeholder_logo_1.png", alt:"Logo Image"}
    %a#js-mobile-menu.navigation-menu-button{href:"javascript:void(0)"}MENU
    %nav{role:'navigation'}
      %ul#js-navigation-menu.navigation-menu.show
        %li.nav-link
          %a{href:'javascript:void(0)'} Products
        %li.nav-link
          %a{href:'javascript:void(0)'} About Us
        %li.nav-link
          %a{href:'javascript:void(0)'} Contact
        %li.nav-link.more
          %a{href:'javascript:void(0)'} More
          %ul.submenu
            %li
              %a{href:'javascript:void(0)'} Submenu Item
            %li
              %a{href:'javascript:void(0)'} Another Item
            %li.more
              %a{href:'javascript:void(0)'} Item with submenu
              %ul.submenu
                %li
                  %a{href:'javascript:void(0)'} Sub-submenu Item
                %li
                  %a{href:'javascript:void(0)'} Another Item
            %li.more
              %a{href:'javascript:void(0)'} Another submenu
              %ul.submenu
                %li
                  %a{href:'javascript:void(0)'} Sub-submenu
                %li
                  %a{href:'javascript:void(0)'} An Item
    .navigation-tools
      - if current_user
        .search-bar
          %form{role:'search'}
            %input{type:'search',placeholder:'Enter Search'}
            %button{type:'submit'}
              %img{src:'https://raw.githubusercontent.com/thoughtbot/refills/master/source/images/search-icon.png', alt:'Search Icon'}
        = link_to 'Sign Out', destroy_user_session_path, method: :delete, class:'sign-in'
      - else
        = link_to 'Sign In', new_user_session_path, id: 'show-login', class:'sign-in'
        = link_to 'Sign Up', new_user_registration_path, class:'sign-up'

