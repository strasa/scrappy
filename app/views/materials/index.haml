=render partial:"nav"

.materials-container
  %table.table-minimal
    %tr
      %th Material Name
      %th Price
      %th Action
    - @materials.each do |material|
      = form_for material do |f|
        %tr{id:"material_#{material.id}"}
          %td= material.name
          %td= f.text_field :price, value: number_with_precision(f.object.price, precision:2)
          %td= f.submit 'Update'

=modal_for('Add New Material', 'Instructions should go here.') do
  = form_for Material.new do |f|
    = f.label :name
    = f.text_field  :name
    = f.label :price
    = f.text_field :price
    = f.submit 'Create'
